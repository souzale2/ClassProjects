@{
    ViewData["Title"] = "Home";
}

<h1>Welcome to the Guitar Shop!</h1>

<p>Make yourself at home and check out some cool instruments.</p>

<div class="row">
    <div class="col-md-4">
        <div class="list-group">
            <a asp-controller="Product" asp-action="List"
               class="list-group-item">View our products</a>
            <a asp-controller="Home" asp-action="About"
               class="list-group-item">Learn more about us</a>
        </div>
    </div>
</div>

<label>Selected Item from items group</label>
<a asp-controller="Product" asp-action="List" asp-route-id="Guitars"
   class="list-group-item
                         @(ViewBag.SelectedCategoryName == "Guitars" ? "active" : "")">
    Guitars
</a>
<a asp-controller="Product" asp-action="List" asp-route-id="Basses"
   class="list-group-item
                         @(ViewBag.SelectedCategoryName == "Basses" ? "active" : "")">
    Basses
</a>
<a asp-controller="Product" asp-action="List" asp-route-id="Drums"
   class="list-group-item
                         @(ViewBag.SelectedCategoryName == "Drums" ? "active" : "")">
    Drums
</a>

<form asp-controller="Home" asp-action="Index" >
    <select name="category" onchange="this.form.submit();" asp-items="@( new SelectList(ViewBag.Categories, ViewBag.SelectedCategoryName))"></select>
</form>